
<form action="cats_url" method="post">
  <label for="name">Name</label>
  <input id="name"  type="text" name="cat[name]">

  <br>

  <label for="sex">Sex</label>
  M<input type="radio" name="sex" value="cat[sex]">
  F<input type="radio" name="sex" value="cat[sex]">

  <br>

  <label for="date">Birth Date</label>
  <input id="date" name="cat[birth_date]" type="date">

  <br>


  <label for="description">Description</label>
  <textarea name="cat[description]" rows="10" cols="20">
    <%# cat.description %>
  </textarea>
  <br>

  <label for="color">Color</label>
  <select id="color" name="cat[color]">
    <option disabled selected>Select color</option>
    <option value="brown">Brown</option>
    <option value="black">Black</option>
    <option value="white">White</option>
    <option value="orange">Orange</option>
    <option value="grey">Grey</option>
  </select>

  <br>
  <input type="submit" value="Add cat!">
</form>
